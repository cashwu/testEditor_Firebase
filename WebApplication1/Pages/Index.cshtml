@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" multiple />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>

<br/>

@if (Model.ImgUrl.Count > 0)
{
    foreach (var url in Model.ImgUrl)
    {
       <img src="@url"/> 
    } 
}

<br/>
<br/>
<hr /> <hr />

<form method="post" asp-page-handler="Data">
    
    <button type="submit">Submit Data</button>
    
</form>

@if (Model.FObject != null)
{
    <h5>Key - @Model.Key</h5>
    <h5>Name - @Model.FObject.Name</h5>
    <h5>Url - @Model.FObject.Url</h5>
}

<br/>
<br/>
<hr /> <hr />

<form method="post" asp-page-handler="DataUpdate">
    
    <button type="submit">Update Data</button>
    
</form>

@if (Model.FObject != null)
{
    <h5>Key - @Model.Key</h5>
    <h5>Name - @Model.FObject.Name</h5>
    <h5>Url - @Model.FObject.Url</h5>
}
