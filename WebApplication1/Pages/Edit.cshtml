@model EditModel

@{
}

<link rel="stylesheet" href="~/dist/ui/trumbowyg.min.css"/>
<link rel="stylesheet" href="~/dist/plugins/highlight/ui/trumbowyg.highlight.min.css"/>
<link rel="stylesheet" href="~/lib/prism.css"/>
